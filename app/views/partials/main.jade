div.main-content
  div.content-area
    form(action='', method='POST', role='form')
      legend Birth Details
      .form-group
        label(for='fullname') Name
        input.form-control(id='fullname', type='text', placeholder='Enter your name')

        label(for='birthDate') Date of Birth
        input.form-control(id='birthDate', type='date', placeholder='When were you born?')

        label(for='birthTime') Time of Birth
        input.form-control(id='birthTime', type='time', placeholder='Exactly when?')

        label(for='select-state') State of Birth
